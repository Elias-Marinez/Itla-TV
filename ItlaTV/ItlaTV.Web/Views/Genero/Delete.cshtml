@model ItlaTV.Web.Models.Genero.GeneroViewModel

@{
    ViewData["Title"] = "Eliminar Genero";
}

<h1>Generos</h1>
<div class="row">
    <hr />
    <h3>¿Está seguro que desea eliminar este género?</h3>
    <dl class="row md-2">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneroId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneroId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="submit" value="Aceptar" class="btn btn-danger col-2 mx-auto" />
        <a asp-action="Index" class="btn btn-primary col-2 mx-auto">Cancelar</a>
    </form>
</div>
