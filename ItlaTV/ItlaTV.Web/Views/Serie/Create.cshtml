@model ItlaTV.Web.Models.Serie.SerieCreateViewModel

@{
    ViewData["Title"] = "Series";
}

<div class="d-flex justify-content-between bottom-line">
    <div>
        <h1 class="d-inline">Series</h1>
    </div>
    <div>
        <h5 class="fw-ligther m-3">Agregando serie</h5>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagen" class="control-label"></label>
                        <input type="file" asp-for="Imagen" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductoraId" class="control-label">Productora</label>
                        <select asp-for="ProductoraId" asp-items="@(new SelectList(Model.Productoras, "ProductoraId", "Nombre"))" class="form-control" required>
                            <option value="">Seleccionar una productora</option>
                        </select>
                        <span asp-validation-for="ProductoraId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GeneroId" class="control-label">Genero Principal</label>
                        <select asp-for="GeneroId" asp-items="@(new SelectList(Model.Generos, "GeneroId", "Nombre"))" class="form-control" required>
                            <option value="">Seleccionar un genero</option>
                        </select>
                        <span asp-validation-for="GeneroId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SGeneroId" class="control-label">Genero Secundario</label>
                        <select asp-for="SGeneroId" asp-items="@(new SelectList(Model.Generos, "GeneroId", "Nombre"))" class="form-control" required>
                            <option value="">Seleccionar un genero</option>
                        </select>
                        <span asp-validation-for="SGeneroId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Enlace" class="control-label"></label>
                        <input asp-for="Enlace" class="form-control" />
                        <span asp-validation-for="Enlace" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group mt-2 text-center">
                        <input type="submit" value="Guardar" class="btn btn-block btn-success col-6 mx-auto" />
                        <a asp-action="Index" class="btn btn-block btn-primary col-5 mx-auto">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
