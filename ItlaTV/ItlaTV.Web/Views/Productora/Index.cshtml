@model IEnumerable<ItlaTV.Web.Models.Productora.ProductoraViewModel>

@{
    ViewData["Title"] = "Generos";
}

<h1>Productoras</h1>

<p>
    <a asp-action="Create">Nueva productora</a>
</p>
@if (Model.Count() == 0)
{
    <tr>No existen productoras</tr>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.ProductoraId  }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.ProductoraId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}